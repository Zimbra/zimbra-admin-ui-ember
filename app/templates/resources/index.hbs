<ol class="breadcrumb">
  <li>{{#link-to "index"}}Home{{/link-to}}</li>
  <li class="active">Resources</li>
</ol>

<table>
  <thead>
    <th>&nbsp;</th>
    <th>Email Address</th>
    <th>Display Name</th>
    <th>Status</th>
    <th>Description</th>
  </thead>
  
  <tbody>
    {{#each resource in model}}
    <tr>
      <td>{{resource-icon resource.zimbraCalResType}}</td>
      <td>{{#link-to "resources.resource" resource}}{{resource.name}}{{/link-to}}</td>
      <td>{{resource.displayName}}</td>
      <td>{{resource.zimbraAccountStatus}}</td>
      <td>{{resource.description}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
