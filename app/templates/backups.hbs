<ol class="breadcrumb">
  <li>{{#link-to "index"}}Home{{/link-to}}</li>
  <li class="active">Backups</li>
</ol>

<table>
  <thead>
    <th>&nbsp;</th>
    <th>Server</th>
    <th>Label</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Status</th>
  </thead>
  
  <tbody>
    {{#each backup in model}}
    <tr>
      <td><span class="glyphicon glyphicon-save"/></td>
      <td>{{backup.server.name}}</td>
      <td>{{backup.label}}</td>
      <td>{{moment-format backup.start format="lll"}}</td>
      <td>{{moment-format backup.end format="lll"}}</td>
      <td><span {{bind-attr class=":label hasErrors:label-danger hasWarnings:label-warning isSuccess:label-success"}}>{{backup.status}}</span></td>
    </tr>
    {{/each}}
  </tbody>
</table>
