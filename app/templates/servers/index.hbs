<ol class="breadcrumb">
  <li>{{#link-to "index"}}Home{{/link-to}}</li>
  <li class="active">Servers</li>
</ol>

<table>
  <thead>
    <th>&nbsp;</th>
    <th>Service Host Name</th>
    <th>Description</th>
  </thead>
  
  <tbody>
    {{#each server in model}}
    <tr>
      <td><span class="glyphicon glyphicon-tasks"/></td>
      <td>{{#link-to "servers.server" server}}{{server.name}}{{/link-to}}</td>
      <td>{{server.description}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
