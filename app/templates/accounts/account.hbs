<ol class="breadcrumb">
  <li>{{#link-to "index"}}Home{{/link-to}}</li>
  <li>{{#link-to "accounts"}}Accounts{{/link-to}}</li>
  <li class="active">{{uid}}</li>
</ol>

<form class="panel panel-default">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-user"></span>
    {{model.displayName}}
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <div class="input-group">
          <span class="input-group-addon">Email</span>
          {{model.name}}
        </div>
        <div class="input-group">
          <span class="input-group-addon">Quota</span>
          ? of {{model.zimbraMailQuota}}
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="input-group">
          <span class="input-group-addon">ID</span>
          {{id}}
        </div>
        <div class="input-group">
          <span class="input-group-addon">Created</span>
          {{moment-format model.created format="fromNow"}}
          ({{moment-format model.created format="lll"}})
        </div>
        <div class="input-group">
          <span class="input-group-addon">Server</span>
          {{model.zimbraMailHost}}
        </div>
        <div class="input-group">
          <span class="input-group-addon">Status</span>
          {{model.zimbraMailStatus}}
        </div>
        <div class="input-group">
          <span class="input-group-addon">Last Login</span>
          {{moment-format model.zimbraLastLogonTimestamp format="fromNow" defaultValue="never"}}
          (at {{moment-format model.zimbraLastLogonTimestamp format="hh:mm a"}})
        </div>
      </div>
    </div>
  </div>
</form>

<form class="panel panel-default">
  <div class="panel-heading">Account Name</div>
  <div class="panel-body">
    <div class="input-group">
      <span class="input-group-addon">Account name</span>
      {{input value=model.uid}}
      @{{view "select" content=model.domains selection=selectedDomain optionValuePath="content.id" optionLabelPath="content.name"}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">First name</span>
      {{input value=model.givenName}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Middle initial</span>
      {{input value=model.initials}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Last name</span>
      {{input value=model.sn}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Display name</span>
      {{input value=model.displayName}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Hide in GAL</span>
      {{input type="checkbox" checked=model.zimbraHideInGal}}
    </div>
  </div>
</form>

<div class="panel panel-default">
  <div class="panel-heading">Account Setup</div>
  <div class="panel-body">
    <div class="input-group">
      <span class="input-group-addon">Status</span>
      {{input value=model.zimbraMailStatus}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Class of Service</span>
      {{view "select" content=model.coses selection=model.zimbraCOSId optionValuePath="content.id" optionLabelPath="content.name"}}
      {{input type="checkbox" checked=model.cosAuto}} Auto
    </div>
    <div class="input-group">
      <span class="input-group-addon">Global Administrator</span>
      {{input type="checkbox" checked=model.zimbraIsAdminAccount}}
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Notes</div>
  <div class="panel-body">
    <div class="input-group">
      <span class="input-group-addon">Description</span>
      {{textarea value=model.description}}
    </div>
    <div class="input-group">
      <span class="input-group-addon">Notes</span>
      {{textarea value=model.notes}}
    </div>
  </div>
</div>
